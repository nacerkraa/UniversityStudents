<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_university_student_tree" model="ir.ui.view">
        <field name="name">university.student.form</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <tree>

                <field name="ref" string="n° Inscription"/>
                <field name="name" string="Patient Name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="faculty"/>
                <field name="rate"/>
                <field name="establish_date"/>
            </tree>
        </field>
    </record>

    <record id="view_university_student_form" model="ir.ui.view">
        <field name="name">university.student.form</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
            <group>
            <group>
                <field name="ref" string="n° Inscription"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="email"/>
            </group>

            <group>
                <field name="phone"/>
                <field name="faculty"/>
                <field name="rate"/>
                <field name="establish_date"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id=" view_university_student_search" model="ir.ui.view">
        <field name="name">university.student.search</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref" string="n° Inscription" filter_domain="['|', ('name', 'ilike', self), ('ref', 'ilike',
                self)]"/>
                <field name="name" string="Student Name"/>
                <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
            </search>
        </field>
    </record>

    <record id="action_university_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">university.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Student!
            </p>
        </field>
    </record>

    <menuitem id="menu_student"
              name="Student"
              action="action_university_student"
              parent="menu_student_master"
              sequence="0"/>

</odoo>