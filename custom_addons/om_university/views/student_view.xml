<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_university_student_tree" model="ir.ui.view">
        <field name="name">university.student.form</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0"
                  decoration-success="state == 'accepted'"
                  decoration-danger="state == 'refused'"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'under_review'" sample="1" multi_edit="1">

                <field name="ref" string="n° Inscription"/>
                <field name="name" string="Student Name"/>
                <field name="establish_date" string="Annie du BAC" optional="show"/>
                <field name="gender" optional="hide"/>
                <field name="email"/>
                <field name="phone" optional="show"/>
                <field name="univ_id" optional="show"/>
                <field name="faculty_id" optional="show"/>
                <field name="rate" optional="show"/>
                <field name="age" string="n° des annis" optional="show"/>
                <field name="type_transfer" string="Type" optional="show"/>
                <field name="Gestionnaire_centrale_id" widget="many2one_avatar_user"/>
                <field name="state" string="Status"
                       decoration-success="state == 'accepted'"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'under_review'"
                       decoration-danger="state == 'refused'"
                       widget="badge"/>

            </tree>
        </field>
    </record>

    <record id="view_university_student_form" model="ir.ui.view">
        <field name="name">university.student.form</field>
        <field name="model">university.student</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"
                           statusbar_visible="draft,under_review,accepted"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="ref" string="n° Inscription"/>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="faculty_id"/>
                            <field name="Gestionnaire_centrale_id" widget="many2one_avatar"/>
                            <field name="establish_date" string="Annie du BAC" optional="show"/>
                        </group>

                        <group>
                            <field name="univ_id" help="the name of the university"/>
                            <field name="rate"/>
                            <button name="action_test" string="Object Button" type="object" class="oe_highlight"/>
                            <button name="%(om_university.action_university_student)d"
                                    string="Refuse" type="action"
                                    help="On click in this you will be refuse the request that send from the student"
                                    confirm="Are you sure to refuse the request!"
                                    class="oe_highlight"/>
                            <field name="type_transfer" invisible="1"/>
                            <field name="active" invisible="1"/>
                        </group>

                        <notebook>
                            <page string="Comment" name="comment">
                                <field name="comment" placeholder="Enter Your Comment here"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_university_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">university.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Student!
            </p>
        </field>
    </record>

    <menuitem id="menu_student"
              name="Student"
              action="action_university_student"
              parent="menu_student_master"
              sequence="0"/>

</odoo>